extends layout

block scripts
  script(src='/js/users.js')

block content
  h1= title

  #users-page

    .search
      label(for='user-name') Поиск пользователя:
      input#user-name(type='text' name='user-name')

    .list
      each user, index in users
        span.user= `${index}: ${user.login}`
        a.chatting(href=`/chat/${user.login}`) chatting
      else
        h3 There are no users yet
      
    if (users)
      span#load-users Load users
