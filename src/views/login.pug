extends layout

block content
  #login-page
    h4= title

    form(method='POST')
      label(for='login') Login
      input(type='text' name='login' value=(user ? user.login : ''))
      br

      label(for='email') Password
      input(type='password' name='password' value=(user ? user.password : ''))
      br

      input(type='submit')

      if (err)
        p= err
